<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('orderlines')]" position="before">
            <t t-if="receipt.date">
                <div class="pos-receipt-center-align mt-1">
                    Fecha: <br/>
                    <t t-esc="receipt.date.localestring"/>
                </div>
             </t>
            <t t-if="receipt.client and receipt.client.vat">
                <div class="pos-receipt-center-align">
                    CÃ©dula: <br/>
                    <t t-esc="receipt.client.vat"/>
                </div>
            </t>
            <t>
                <div class="pos-receipt-center-align pos-customer">
                    Cliente: <br/>
                    <t t-if="receipt.client and receipt.client.name" t-esc="receipt.client.name"/>
                    <t t-if="not receipt.client">Contado</t>
                </div>
             </t>
            <t t-if="receipt.number_electronic pos-con-number">
                <div class="pos-receipt-center-align">
                    Clave: <br/>
                    <t t-esc="receipt.number_electronic.substring(0,25)"/><br/>
                    <t t-esc="receipt.number_electronic.substring(25,50)"/>
                </div>
                <div class="pos-receipt-center-align pos-con-number">
                    Consecutivo: <br/>
                    <t t-esc="receipt.number_electronic.substring(21,41)"/>
                </div>
            </t>
        </xpath>
    </t>

</templates>
